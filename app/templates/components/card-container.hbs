<div class="card-container">
  {{#if filterButtons}}
    {{card-filter
      filterButtons=filterButtons
      updateCardList=(action filterCards)
    }}
  {{/if}}


  <div class="row row-centered">
    {{#each filteredCardList as |card|}}
      {{#if (eq cardComponentType "portal")}}
        {{card-portal
          portal=card
        }}
      {{else}}
        {{card-single
          id=card.id
          title=card.title
          description=card.description
          comingSoon=card.comingSoon
          link=card.link
          type=card.type
        }}
      {{/if}}
    {{/each}}

    {{!-- Add a portal --}}
    <div class="col-md-4 col-sm-6 col-xs-12 col-centered card card--add">
        <div class="card__inner-cont">
          <input type="text" id="inputPortalName" name="portalName" placeholder="e.g., Chase Checking" required/>
          <input type="text" id="inputPortalLink" name="portalLink" placeholder="paste the website link here" required/>

          <button class="card__button--add" {{action handleAddPortal}}>
            {{fa-icon "plus"}}
          </button>

        </div>
    </div>

    {{!-- Helper Info --}}
    <div class="col-md-4 col-sm-6 col-xs-12 col-centered card card--add">
        <div class="card__inner-cont">
          <h5 id="addPortalHelperInfo">Keep all of your important websites in one place,</h5>
          <p class="card__desc">And remember to check on them.</p>
        </div>
    </div>

  </div>
</div>
