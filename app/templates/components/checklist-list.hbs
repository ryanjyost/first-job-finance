<div class="checklist__list">
  <h5 class="checklist__title">{{checklistInfo.title}}</h5>
  <p>{{checklistInfo.description}}</p>

  <div class="checklist__progress-bar">
    <span class="progress-bar--left"></span>
{{!--     <span class="progress-bar--right"></span> --}}
  </div>
{{!--
  <h4 class="checklist__percent-complete">{{format-number percentComplete "percent"}} complete</h4> --}}

  {{#each checklistInfo.items as |item|}}
    {{checklist-item
      item=item
      itemsCompleted=itemsCompleted
      handleUpdateItem=(route-action "updateChecklistItemsCompleted")
      passUpUpdatedItem=(action 'handleUpdateProgressBar')
      percentComplete=percentComplete
    }}
  {{/each}}
</div>


