<div class="col-md-4 col-sm-6 col-xs-12 portal">

  <a href={{portal.link}} target="_blank" class="portal__link"></a>

  <div class="portal__inner-cont">
    <a href="" {{action "updateTimeLastVisited" }} >
      <div>
        <h6 class="portal__title">
          {{portal.name}}
        </h6>
        <h6 class="portal__lastVisited">
          {{#if portal.lastVisited}}
            Last visited <strong>{{moment-from-now portal.lastVisited}}</strong>
          {{else}}
            {{portal.portalInfo}}
          {{/if}}

        </h6>

        <button {{action "deletePortal"}} class="portal__button--delete">
          {{fa-icon "times"}}
        </button>
      </div>

    </a>
  </div>
</div>